<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/papularImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/popular1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/papularName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif"
        android:text="Nasi Padang"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/papularImage"
        app:layout_constraintStart_toStartOf="@id/papularImage"
        app:layout_constraintTop_toBottomOf="@id/papularImage"
         />


</androidx.constraintlayout.widget.ConstraintLayout>